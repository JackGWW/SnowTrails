{
  "expo": {
    "name": "SnowTrails",
    "slug": "SnowTrails",
    "version": "1.5.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E3A52"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.jgwwilliams.snowtrails",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show your current position on the trail map",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to record your snowshoe route, even when the app is in the background",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon_foreground.png",
        "backgroundColor": "#2E3A52"
      },
      "icon": "./assets/icon.png",
      "package": "com.jgwwilliams.SnowTrails",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "plugins": [
      [
        "@sentry/react-native/expo",
        {
          "organization": "snowtrails",
          "project": "snowtrails",
          "url": "https://sentry.io/"
        }
      ],
      "expo-font",
      [
        "expo-location",
        {
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      "@rnmapbox/maps"
    ],
    "extra": {
      "eas": {
        "projectId": "f342101d-f80c-4515-a297-523366dad004"
      }
    },
    "owner": "jackgww"
  }
}
